<nav class="fs-6 p-3 container mt-2 p-2 bio"><%= link_to "Back", :back %></nav>
<h3 class="fs-2 p-3 container mt-2 p-2 bio" style="height: 0"> Create Your Blog</h3>
<section class="fs-4 p-3 border border-1 container mt-5 p-2 bio">
  <%= form_with model:[@current, @current.posts.build], method: :post, local: true do |f| %>
    <%= f.label :title, "Title", class: "form-label fs-6" %>
    <%= f.text_field :title, :placeholder => "Title goe here...", required: true, class: "form-control mb-4" %>
    <%= f.label :text, "Write a new blog", class: "form-label fs-6" %>
    <%= f.text_area :text, size: "80x15", :placeholder => "Add your blog here...", required: true, class: "form-control" %>
    <%= f.submit "Add Blog", data: {disable_with: "Adding..."}, class: "btn btn-primary my-3" %>
  <% end %>
</section>